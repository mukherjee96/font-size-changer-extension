{
  "manifest_version": 3,
  "name": "Font Size Changer",
  "version": "1.0",
  "description": "Change font size using a slider or buttons",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}